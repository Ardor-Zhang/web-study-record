{
  "compilerOptions": {
    "target": "es2017", // 允许es6⽅式import
    "lib": [
      "es2015"
    ], // 模块解决策略
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist", // 组织代码⽅式
    "sourceMap": true, // 开启装饰器定义
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}
